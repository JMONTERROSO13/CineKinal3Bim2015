<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="gt.edu.kinal.jmonterroso.movies.LoginActivity"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/LayoutToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <include android:id="@+id/toolbar"
            layout="@layout/toolbar" ></include>
    </LinearLayout>

    <TextView
        android:id="@+id/textLog"
        android:text="@string/loggin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/LayoutToolBar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/user"
        android:text="@string/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:layout_below="@+id/textLog" />

    <EditText
        android:id="@+id/userText"
        android:layout_width="400dp"
        android:drawableLeft="@drawable/ic_user_name"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:layout_alignTop="@+id/user"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/pass"
        android:text="@string/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textStyle="italic"
        android:layout_below="@+id/userText"/>

    <EditText
        android:id="@+id/passText"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_pass_user"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:password="true"
        android:layout_alignTop="@+id/pass"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/logins"
        android:background="#ffffff"
        android:textSize="15sp"
        android:textColor="@color/background"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:id="@+id/registers"
        android:background="@android:color/transparent"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="350dp"
        android:layout_marginBottom="30dp"
        />

</RelativeLayout>