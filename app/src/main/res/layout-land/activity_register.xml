<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="gt.edu.kinal.jmonterroso.movies.Register"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/LayoutToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <include android:id="@+id/toolbar"
            layout="@layout/toolbar" ></include>
    </LinearLayout>

    <TextView
        android:id="@+id/user"
        android:text="@string/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_alignTop="@+id/userText"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignStart="@+id/pass"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/userText"
        android:layout_width="400dp"
        android:drawableLeft="@drawable/ic_user_name"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:layout_below="@+id/LayoutToolBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="text"/>

    <TextView
        android:id="@+id/pass"
        android:layout_centerHorizontal="true"
        android:text="@string/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/textColorPrimary"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:layout_alignParentRight="false"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/passText"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_pass_user"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:password="true"
        android:layout_alignTop="@+id/pass"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="text|textVisiblePassword"/>

    <TextView
        android:id="@+id/pass2"
        android:layout_centerHorizontal="true"
        android:text="@string/password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/textColorPrimary"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:layout_alignParentRight="false"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/passText2"
        android:layout_width="400dp"
        android:drawableLeft="@drawable/ic_pass_user"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:layout_alignTop="@+id/pass2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/email"
        android:layout_centerHorizontal="true"
        android:text="@string/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/textColorPrimary"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:layout_alignParentRight="false"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/emailText"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_email"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:password="true"
        android:layout_alignTop="@+id/email"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/logins"
        android:background="@android:color/transparent"
        android:textSize="15sp"
        android:textColor="@color/textColorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createReg"
        android:id="@+id/regit"
        android:background="#ffffff"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/background"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="150dp"
        />

</RelativeLayout>
