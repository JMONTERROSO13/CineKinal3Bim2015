<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="gt.edu.kinal.jmonterroso.movies.LoginActivity"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/LayoutToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <include android:id="@+id/toolbar"
            layout="@layout/toolbar" ></include>
    </LinearLayout>

    <TextView
        android:id="@+id/textLog"
        android:layout_centerHorizontal="true"
        android:text="@string/loggin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LayoutToolBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/textColorPrimary"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp"
        android:textSize="25sp"
        android:layout_alignParentRight="false"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/user"
        android:layout_centerHorizontal="true"
        android:text="@string/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LayoutToolBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/textColorPrimary"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:layout_alignParentRight="false"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/userText"
        android:layout_below="@+id/user"
        android:layout_width="300dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_user_name"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"/>

    <TextView
        android:id="@+id/pass"
        android:layout_centerHorizontal="true"
        android:text="@string/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/textColorPrimary"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:layout_alignParentRight="false"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/passText"
        android:layout_below="@+id/pass"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_pass_user"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:password="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/logins"
        android:background="#ffffff"
        android:textSize="15sp"
        android:textColor="@color/background"
        android:layout_below="@+id/passText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:layout_below="@+id/logins"
        android:id="@+id/registers"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        />


</RelativeLayout>